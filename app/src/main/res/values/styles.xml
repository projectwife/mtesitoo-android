<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="TextAppearanceFinish">
        <item name="android:textColor">#fff</item>
    </style>

    <style name="ButtonBar" parent="@android:style/ButtonBar">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="ButtonBarButton">
        <item name="android:minHeight">@dimen/list_item_height_small</item>
    </style>

    <style name="CardTheme">
        <item name="android:background">#ffffff</item>
        <item name="android:padding">4dip</item>
    </style>

    <style name="CardBorderTheme">
        <item name="android:background">#e6e6e6</item>
        <item name="android:padding">2dip</item>
    </style>

    <style name="TextTheme">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">"sans-serif-light"</item>
    </style>

    <style name="TextBoldTheme" parent="@style/TextTheme">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextLinkTheme" parent="@style/TextTheme">
        <item name="android:textColor">#000099</item>
    </style>

    <style name="TextTitleTheme" parent="@style/TextTheme">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextTitleBoldTheme" parent="@style/TextTitleTheme">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ProfileEditTextTheme" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/profile_text_colour</item>
        <item name="android:background">@drawable/edittext_border_bg</item>
    </style>

    <style name="ProfileEditTextSingleLine" parent="@style/ProfileEditTextTheme">
        <item name="android:lines">1</item>
    </style>

    <style name="ProfileFirstTextTitleTheme" parent="@style/TextAppearance.AppCompat.Small">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/profile_labels_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/profile_labels_margin_bottom</item>
    </style>

    <style name="ProfileTextTitleTheme" parent="@style/ProfileFirstTextTitleTheme">
        <item name="android:layout_marginTop">@dimen/profile_labels_margin</item>
    </style>


</resources>
