<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/product_list_item"
    style="@style/CardBorderTheme"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        style="@style/CardTheme"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/product_name"
                style="@style/TextTitleTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Name" />

            <ImageView
                android:id="@+id/product_thumbnail"
                android:layout_width="150dip"
                android:layout_height="150dip"
                android:layout_gravity="center"
                android:layout_marginTop="8dip"
                android:scaleType="centerCrop"
                android:src="@drawable/stock_order" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dip"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/product_category"
                    style="@style/TextTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product Category" />

                <TextView
                    android:id="@+id/product_price"
                    style="@style/TextTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="$$$" />

            </RelativeLayout>

            <View
                android:id="@+id/product_layout_divider"
                android:layout_width="350dip"
                android:layout_height="1dip"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dip"
                android:background="#d9d9d9"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dip"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/product_see_details_link"
                    style="@style/TextLinkTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See details" />

                <TextView
                    android:id="@+id/product_see_details_ellipsis_link"
                    style="@style/TextLinkTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="..." />

            </RelativeLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>