<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_background"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/new_product_page_height"
        android:background="@color/md_white_1000"
        android:orientation="vertical"
        android:padding="@dimen/new_product_page_padding">

        <TextView
            style="@style/ProfileTextTitleTheme"
            android:text="@string/product_details_photo" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/pictures_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            tools:listitem="@layout/add_product_list_item" />

    </LinearLayout>

</LinearLayout>
