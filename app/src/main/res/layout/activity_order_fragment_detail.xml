<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e6e6">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.daimajia.slider.library.SliderLayout
                android:id="@+id/product_image_slider"
                android:layout_width="match_parent"
                android:layout_height="300dip" />
            <!--<ImageView-->
            <!--android:id="@+id/logo"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:contentDescription="@null" />-->

            <RelativeLayout
                android:id="@+id/product_detail_info_border"
                style="@style/CardBorderTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    style="@style/CardTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="8dip"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextBoldTheme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Customer Name" />

                        <TextView
                            android:id="@+id/customer_name"
                            style="@style/TextTheme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="..." />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="8dip"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextBoldTheme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Product Name" />

                        <TextView
                            android:id="@+id/product_name"
                            style="@style/TextTheme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="..." />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="8dip"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextBoldTheme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Product Quantity" />

                        <TextView
                            android:id="@+id/product_quantity"
                            style="@style/TextTheme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="..." />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="8dip"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextBoldTheme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Product Price" />

                        <TextView
                            android:id="@+id/product_price"
                            style="@style/TextTheme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="..." />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/product_detail_price_border"
                style="@style/CardBorderTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    style="@style/CardTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="8dip"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextBoldTheme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Price" />

                        <TextView
                            android:id="@+id/order_total_price"
                            style="@style/TextTheme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="..." />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="8dip"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextBoldTheme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Delivery Address" />

                        <TextView
                            android:id="@+id/order_delivery_address"
                            style="@style/TextTheme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"

                            android:text="..." />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="8dip"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextBoldTheme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Order Status" />

                        <TextView
                            android:id="@+id/order_status"
                            style="@style/TextTheme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="..." />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/order_detail_date_border"
                style="@style/CardBorderTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    style="@style/CardTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="8dip"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextBoldTheme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Order Placed Date" />

                        <TextView
                            android:id="@+id/order_placed_date"
                            style="@style/TextTheme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="..." />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="8dip"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextBoldTheme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Payment Method" />

                        <TextView
                            android:id="@+id/order_payment_method"
                            style="@style/TextTheme"
                            android:layout_width="150dip"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="..." />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>