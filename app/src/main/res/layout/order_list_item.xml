<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/order_list_item"
    style="@style/CardBorderTheme"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#e6e6e6" >

    <RelativeLayout
        style="@style/CardTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout">

        <TextView
            android:id="@+id/customer_NameTitle"
            style="@style/TextTitleTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/customer_name"
            android:text="@string/customer_name"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/customer_Name"
            style="@style/TextTitleTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/order_id_title"
            style="@style/TextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/customer_NameTitle"
            android:layout_alignParentLeft="true"
            android:text="@string/order_id"
            android:layout_alignRight="@+id/customer_NameTitle"
            android:layout_alignEnd="@+id/customer_NameTitle" />

        <TextView
            android:id="@+id/order_id"
            style="@style/TextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1458"
            android:layout_below="@+id/customer_NameTitle"
            android:layout_toRightOf="@+id/customer_NameTitle"
            android:layout_toEndOf="@+id/customer_NameTitle" />

        <TextView
            android:id="@+id/order_total_price_title"
            style="@style/TextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total_price"
            android:layout_below="@+id/customer_Name"
            android:layout_alignLeft="@+id/order_status_title"
            android:layout_alignStart="@+id/order_status_title" />

        <TextView
            android:id="@+id/order_total_price"
            style="@style/TextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/customer_NameTitle"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/date_ordered_title"
            style="@style/TextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_id_title"
            android:layout_alignParentLeft="true"
            android:text="@string/date_order_placed"
            android:layout_alignRight="@+id/order_id_title"
            android:layout_alignEnd="@+id/order_id_title" />

        <TextView
            android:id="@+id/date_ordered"
            style="@style/TextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_id_title"
            android:layout_toLeftOf="@+id/order_status_title"
            android:layout_toRightOf="@+id/customer_NameTitle"
            android:layout_toEndOf="@+id/customer_NameTitle" />

        <TextView
            android:id="@+id/order_status_title"
            style="@style/TextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_id_title"
            android:layout_toLeftOf="@+id/order_status"
            android:paddingRight="12dp"
            android:text="@string/order_status" />

        <TextView
            android:id="@+id/order_status"
            style="@style/TextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_id_title"
            android:layout_alignParentRight="true" />

        <View
            android:id="@+id/order_layout_divider"
            android:layout_width="wrap_content"
            android:layout_height="1dip"
            android:layout_marginTop="6dip"
            android:layout_marginBottom="6dip"
            android:layout_below="@id/order_status_title"
            android:background="#d9d9d9" />

        <TextView
            android:id="@+id/order_details_link"
            style="@style/TextLinkTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_layout_divider"
            android:layout_alignParentRight="true"
            android:text="@string/see_more_details"
            android:textStyle="bold" />


    </RelativeLayout>

</RelativeLayout>